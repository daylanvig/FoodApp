@inherits InventoryBase
@page "/Inventory" 
@attribute [Microsoft.AspNetCore.Authorization.Authorize]


<h1>Inventory</h1>
<MudContainer MaxWidth="MaxWidth.Medium">
    
    <FoodApp.Client.Components.Foods.FoodForm></FoodApp.Client.Components.Foods.FoodForm>
    <MudDivider Class="mt-4 mb-4"></MudDivider>
    <MudContainer>
        <h2>Your Pantry</h2>
        <MudSimpleTable>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>On Hand</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var food in foods)
                {
                    <tr>
                        <td>@food.Name</td>
                        <td>@($"{food.AmountOnHand.Value:F2} {food.QuantityType}")</td>
                    </tr>
                }
            </tbody>
        </MudSimpleTable>
    </MudContainer>
</MudContainer>